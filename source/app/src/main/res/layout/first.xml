<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <Button
        android:id="@+id/bGenreList"
        android:layout_width="182dp"
        android:layout_height="113dp"
        android:backgroundTint="@color/MediumSpringGreen"
        android:onClick="onClick"
        android:text="@string/action_menuList1"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="90dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp" />

    <Button
        android:id="@+id/bNewCreate"
        android:layout_width="182dp"
        android:layout_height="113dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        android:text="@string/action_menuList5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bGenreList" />
</android.support.constraint.ConstraintLayout>